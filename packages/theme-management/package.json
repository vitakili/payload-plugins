{
  "name": "@kilivi/payloadcms-theme-management",
  "version": "0.2.14",
  "description": "Theme configuration plugin for Payload CMS v3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "react-server": "./dist/server.js",
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./fields/*": {
      "import": "./dist/fields/*.js",
      "types": "./dist/fields/*.d.ts"
    },
    "./views/*": {
      "import": "./dist/views/*.js",
      "types": "./dist/views/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./constants/*": {
      "import": "./dist/constants/*.js",
      "types": "./dist/constants/*.d.ts"
    },
    "./providers/*": {
      "import": "./dist/providers/*.js",
      "types": "./dist/providers/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run compile && pnpm run copyfiles",
    "compile": "swc src -d dist --config-file .swcrc && tsc",
    "dev": "swc src -d dist --config-file .swcrc --watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "validate": "node validate-fields.js",
    "test": "pnpm test:jest:unit && pnpm test:vitest",
    "test:jest": "jest --config jest.config.js",
    "test:jest:unit": "jest --config jest.config.js --testPathIgnorePatterns=integration",
    "test:vitest": "tsx node_modules/vitest/vitest.mjs run --config dev/vitest.simple.config.ts",
    "test:watch": "vitest",
    "test:watch:jest": "jest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:jest": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "keywords": [
    "payloadcms",
    "payload",
    "payload-plugin",
    "theme",
    "configuration"
  ],
  "author": "Kilián Vít",
  "license": "MIT",
  "peerDependencies": {
    "payload": "^3.0.0",
    "@payloadcms/ui": "^3.0.0",
    "react": "^18.3.0 || ^19.0.0-rc",
    "react-dom": "^18.3.0 || ^19.0.0-rc"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.6.3",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.12",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "react-colorful": "^5.6.1",
    "server-only": "^0.0.1"
  }
}
