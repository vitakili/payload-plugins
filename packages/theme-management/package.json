{
  "name": "@kilivi/payloadcms-theme-management",
  "version": "0.2.3",
  "description": "Theme configuration plugin for Payload CMS v3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "react-server": "./dist/server.js",
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./fields/*": {
      "import": "./dist/fields/*.js",
      "types": "./dist/fields/*.d.ts"
    },
    "./views/*": {
      "import": "./dist/views/*.js",
      "types": "./dist/views/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./constants/*": {
      "import": "./dist/constants/*.js",
      "types": "./dist/constants/*.d.ts"
    },
    "./providers/*": {
      "import": "./dist/providers/*.js",
      "types": "./dist/providers/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run compile && pnpm run copyfiles",
    "compile": "swc src -d dist --config-file .swcrc && tsc",
    "dev": "swc src -d dist --config-file .swcrc --watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "validate": "node validate-fields.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "payloadcms",
    "payload",
    "payload-plugin",
    "theme",
    "configuration"
  ],
  "author": "",
  "license": "Apache-2.0",
  "peerDependencies": {
    "payload": "^3.0.0",
    "react": "^18.3.0 || ^19.0.0-rc",
    "react-dom": "^18.3.0 || ^19.0.0-rc"
  },
  "devDependencies": {
    "@payloadcms/db-mongodb": "^3.0.0",
    "@payloadcms/richtext-lexical": "^3.0.0",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.6.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.12",
    "copyfiles": "^2.4.1",
    "jest": "^30.2.0",
    "payload": "^3.58.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.4",
    "typescript": "^5.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "react-colorful": "^5.6.1",
    "server-only": "^0.0.1"
  }
}
