{
  "name": "@kilivi/payloadcms-localized-slugs",
  "version": "0.1.43",
  "description": "Localized slugs plugin for Payload CMS v3 with multi-locale support",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "import": "./src/exports/client/index.ts",
      "types": "./src/exports/client/index.d.ts",
      "default": "./src/exports/client/index.ts"
    },
    "./client/react": {
      "import": "./src/exports/client/react.ts",
      "types": "./src/exports/client/react.d.ts",
      "default": "./src/exports/client/react.ts"
    },
    "./fields/*": {
      "import": "./src/fields/*.ts",
      "types": "./src/fields/*.d.ts",
      "default": "./src/fields/*.ts"
    },
    "./hooks/*": {
      "import": "./src/hooks/*.ts",
      "types": "./src/hooks/*.d.ts",
      "default": "./src/hooks/*.ts"
    },
    "./utils/*": {
      "import": "./src/utils/*.ts",
      "types": "./src/utils/*.d.ts",
      "default": "./src/utils/*.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "compile": "swc ./src -d ./dist --config-file .swcrc",
    "types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "clean": "rimraf -g {dist,*.tsbuildinfo}",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "test": "vitest",
    "test:unit": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "keywords": [
    "payloadcms",
    "payload",
    "payload-plugin",
    "localized",
    "slugs",
    "i18n",
    "internationalization"
  ],
  "author": "Kilián Vít",
  "license": "MIT",
  "peerDependencies": {
    "payload": "^3.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.0.0",
    "jsdom": "^27.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
