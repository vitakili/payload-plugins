{
  "name": "@kilivi/payloadcms-localized-slugs",
  "version": "0.1.34",
  "description": "Localized slugs plugin for Payload CMS v3 with multi-locale support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "import": "./src/exports/client/index.ts",
      "types": "./src/exports/client/index.ts",
      "default": "./src/exports/client/index.ts"
    },
    "./client/react": {
      "import": "./src/exports/client/react.ts",
      "types": "./src/exports/client/react.ts",
      "default": "./src/exports/client/react.ts"
    },
    "./fields/*": {
      "import": "./src/fields/*.ts",
      "types": "./src/fields/*.ts",
      "default": "./src/fields/*.ts"
    },
    "./hooks/*": {
      "import": "./src/hooks/*.ts",
      "types": "./src/hooks/*.ts",
      "default": "./src/hooks/*.ts"
    },
    "./utils/*": {
      "import": "./src/utils/*.ts",
      "types": "./src/utils/*.ts",
      "default": "./src/utils/*.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run compile && pnpm run types",
    "compile": "tsc",
    "types": "tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "test": "vitest",
    "test:unit": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint --fix --ext .ts src",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "keywords": [
    "payloadcms",
    "payload",
    "payload-plugin",
    "localized",
    "slugs",
    "i18n",
    "internationalization"
  ],
  "author": "Kilián Vít",
  "license": "MIT",
  "peerDependencies": {
    "payload": "^3.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.0.0",
    "jsdom": "^27.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
