{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@kilivi/payloadcms-localized-slugs": ["../packages/localized-slugs/src/index.ts"],
      "@kilivi/payloadcms-localized-slugs/*": ["../packages/localized-slugs/src/*"],
      "@kilivi/payloadcms-localized-slugs/client": [
        "../packages/localized-slugs/src/exports/client/index.ts"
      ],
      "@kilivi/payloadcms-localized-slugs/client/react": [
        "../packages/localized-slugs/src/exports/client/react.ts"
      ]
    }
  },
  "include": ["tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules"]
}
